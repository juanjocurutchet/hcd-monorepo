{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [ "apps/hcd-admin/*", "packages/ui/*"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*"
  ]
}